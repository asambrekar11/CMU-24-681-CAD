void GeblGuiEditorBase::Dnm_EditTreeStructure(FsGuiPopUpMenuItem *)
{
	auto dlg=FsGuiDialog::CreateSelfDestructiveDialog <PolyCreDnmTreeDialog>();
	dlg->Make(this);
	dlg->runningModal=YSTRUE;
	dlg->EnableTreeEdit();
	AttachModalDialog(dlg);
	ArrangeDialog();
	SetNeedRedraw(YSTRUE);
}

